    <url-pattern>/cgi-bin/process_request.cgi</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>EchoFile</servlet-name>
    <url-pattern>/cgi-bin/echo.cgi</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>EchoFile</servlet-name>
