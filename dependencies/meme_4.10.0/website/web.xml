  <!-- Note: All <servlet> elements MUST be grouped together and
        placed IN FRONT of the <servlet-mapping> elements -->

  <!-- pretend to be a CGI script to maintain backwards compatibility -->
  <servlet-mapping>
    <servlet-name>MemeRequest</servlet-name>
    <url-pattern>/cgi-bin/meme_request.cgi</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>TomtomRequest</servlet-name>
    <url-pattern>/cgi-bin/tomtom_request.cgi</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
